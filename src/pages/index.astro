---
import BaseLayout from '../layout/BaseLayout.astro';
import { Image } from 'astro:assets';

//images
import headerPic from '../assets/header.jpg';
import displayFirst from '../assets/display-1.jpg'
---


<BaseLayout>
	<section class="h-85v bg-index-hero bg-center bg-cover">
        <div class="h-85v bg-black bg-opacity-50 w-full flex justify-center items-center">
            <div class="text-center text-white ">
                <h1 class="text-[60px] mb-4">DELICIOUS AND KASI-FIED</h1>
                <button class="py-4 px-9 font-bold bg-yellow-500 rounded-3xl hover:bg-red-600 text-black hover:text-white mb-12">Order Now</button>
