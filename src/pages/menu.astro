---
import BaseLayout from "../layout/BaseLayout.astro";

interface menu{
    id: number,
    name: string,
    price: number,
    img: string,
    description: string
}

const menuList: menu[] = [
    {
        id: 1,
        name: 'Veggie',
        price: 55,
        img: 'Vegeta',
        description: 'burger, atchar'
    },
    {
        id: 2,
        name: 'Meaty',
        price: 78,
        img: 'NAMA',
        description: 'burger, atchar, vienna'
    },
    {
        id: 3,
        name: 'Old Skool Burger',
        price: 98,
        img: 'GOKU',
        description: 'Tomato, Red Onion & RocoMayo'
    },
    {
        id: 4,
        name: 'Classic Cheese Burger',
        price: 120,
        img: 'GINTOKI',
        description: '150g Smash, Aged Cheddar, Sweet Pickle, Tomato, Red Onion & RocoMayo'
    }
]
---

<BaseLayout>
     <!--- Menu Hero -->
     <section class="text-4xl font-bold">
        <div class="bg-black h-56 flex justify-center items-center text-white">
            <h1>Menu</h1>
        </div>
    </section>

    <section class="max-w-[1024px] m-auto p-4">
        <div class="text-center mt-8">
            <h1 class="font-bold text-3xl mb-4">Available Options</h1>
            <div class="h-12 w-12 m-auto bg-black"></div>
        </div>
        {menuList.map((item)=>
            <article class="border flex justify-between m-12 p-4" id={(item.id).toString()}>
                <div class="w-1/2 h-48 bg-black"></div>
                <div class="w-1/2 px-4">
                    <h2 class="text-3xl font-bold">{item.name}</h2>
                    <p>{item.description}</p>
                    <p class="text-xl mt-12">R {item.price}</p>
                    <button class="py-4 px-9 font-bold bg-yellow-500 rounded-3xl hover:bg-red-600 text-black hover:text-white mb-12">Add to Cart</button>

                </div>
                
            </article>
        )}
    </section>
    
</BaseLayout>